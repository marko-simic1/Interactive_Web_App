@model RPPP_WebApp.Models.Status

<h2 class="text-center mt-4">Update Status</h2>

<a asp-controller="Zadaci" asp-action="Status">
    <i class="bi bi-arrow-left-square-fill" style="font-size: 2rem; color: #0d6efd;"></i>
</a>

<form asp-action="EditStatus" method="post" class="d-flex flex-column align-items-center justify-content-center gap-3 my-5">

    <input type="hidden" name="IdVrsteStatusa" value="@Model.IdStatusa" />

    <label class="align-self-start fw-bold" for="Ime">Ime statusa: </label>
    <input class="w-100" name="Ime" v required value="@Model.ImeStatusa" />

    <button type="submit" class="btn btn-primary w-10">Update</button>

</form>

@if (TempData.ContainsKey("SuccessMessage"))
{
    <div style="position:absolute; bottom: 2rem; right: 2rem;" class="toast bg-success" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Uspjeh</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            @TempData["SuccessMessage"]
        </div>
    </div>

    <script>
        // Show the toast when the page loads
        document.addEventListener('DOMContentLoaded', function () {
            var toast = new bootstrap.Toast(document.querySelector('.toast'));
            toast.show();
        });
    </script>
}