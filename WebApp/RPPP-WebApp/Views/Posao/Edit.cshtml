
@model RPPP_WebApp.Models.Posao

<tr hx-target="this" hx-swap="outerHTML">
    <td class="text-start">
        <input asp-for="ImePosla" class="form-control" />
    </td>
    <td class="text-start">
        <input asp-for="ImePosla" class="form-control" />
    </td>
    <td class="text-start">
        <input asp-for="IdVrsteNavigation.ImeVrste" class="form-control" />
    </td>





    <td>
        <input type="hidden" asp-for="IdPosla" />
        <button class="btn btn-sm cancel" hx-include="closest tr"
                hx-post="@Url.Action(nameof(PosaoController.Edit), new { id = Model.IdPosla })"
                title="Spremi">
            Spremi
        </button>
    </td>
    <td>
        <button class="btn btn-sm cancel"
                hx-get="@Url.Action(nameof(PosaoController.Get), new { id = Model.IdPosla })"
                title="Odustani">


            Odustani
        </button>
    </td>
    <td>
        <div asp-validation-summary="All"></div>
    </td>
</tr>


@section scripts {
    <script src="~/js/pager.js" asp-append-version="true"></script>
    <script src="~/lib/htmx/htmx.min.js" asp-append-version="true"></script>

    <partial name="IncludeValidation" />
}