@model RPPP_WebApp.Models.VrstaPosla

@{
    ViewBag.Title = "Nova vrsta posla";
}

<h2>Unos nove vrste posla</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="ImeVrste" class="form-label"></label>
        <input asp-for="ImeVrste" class="form-control" />
        @*<div class="form-text"><span asp-validation-for="ImeVrste" class="text-danger"></span></div>*@
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-secondary">Odustani</a>
    </div>
</form>

@section scripts {
    <partial name="IncludeValidation" />
}