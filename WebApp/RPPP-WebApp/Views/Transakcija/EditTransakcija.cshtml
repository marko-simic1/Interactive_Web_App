@model RPPP_WebApp.Models.Transakcija

<tr hx-target="this" hx-swap="outerHTML">
    <td class="text-start">
        <input asp-for="Model" class="form-control" />
    </td>
    <td class="text-start">
        <input asp-for="PozivNaBr" class="form-control" />
    </td>
    <td class="text-start">
        @{
            string vrsta = Model.IdVrsteNavigation?.ImeVrste ?? "Nema vrste";
        }
        <input value="@vrsta" class="form-control" disabled />
    </td>
    <td class="text-start">
        <input asp-for="Iznos" class="form-control" />
    </td>
    <td class="text-start">
        <input asp-for="Datum" class="form-control" disabled/>
    </td>
    <td class="text-start">
        <input asp-for="Opis" class="form-control" />
    </td>
    <td class="text-start">
        <input asp-for="BrKartice" class="form-control" disabled/>
    </td>
    <td>
        <input asp-for="BrKartice" class="form-control" type="hidden" />
    </td>
    <td>
        <input asp-for="IdVrste" class="form-control" type="hidden" />
    </td>
    <td>
        <input asp-for="Datum" class="form-control" type="hidden" />
    </td>
    <td>
        <input type="hidden" asp-for="IdTrans" />
        <button class="btn btn-sm cancel" hx-include="closest tr"
                hx-post="@Url.Action(nameof(TransakcijaController.EditTransakcija), new { id = Model.IdTrans})"
                title="Spremi">
            Spremi
        </button>
    </td>
    <td>
        <button class="btn btn-sm cancel"
                hx-get="@Url.Action(nameof(TransakcijaController.GetTransakcija), new { id = Model.IdTrans})"
                title="Odustani">

            Odustani
        </button>
    </td>
    <td>
        <div asp-validation-summary="All"></div>
    </td>
</tr>

@section scripts {
        <script src="~/js/pager.js" asp-append-version="true"></script>
        <script src="~/lib/htmx/htmx.min.js" asp-append-version="true"></script>

        <partial name="IncludeValidation" />
}