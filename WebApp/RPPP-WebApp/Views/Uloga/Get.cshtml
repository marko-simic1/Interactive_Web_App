@model UlogeViewModel

<tr hx-target="this" hx-swap="outerHTML">
    <td class="text-center">@Model.IdUloge</td>
    <td class="text-center">@Model.ImeUloge</td>
    <td class="text-center">@Model.Opis</td>
    <td>
        <a class="btn btn-sm"
           hx-get="@Url.Action(nameof(UlogaController.Edit), new { id = Model.IdUloge })"
           title="Ažuriraj"><i class="bi bi-arrow-clockwise"></i></a>
    </td>
    <td>
        <button class="btn btn-sm btn-danger delete"
                hx-confirm="Obrisati ulogu?"
                hx-delete="@Url.Action(nameof(UlogaController.Delete), new { id = Model.IdUloge })"
                title="Obriši">
            <i class="bi bi-trash"></i>
        </button>
    </td>
</tr>

@section scripts {
    <script src="~/js/pager.js" asp-append-version="true"></script>
    <script src="~/lib/htmx/htmx.min.js" asp-append-version="true"></script>

    <partial name="IncludeValidation" />
}